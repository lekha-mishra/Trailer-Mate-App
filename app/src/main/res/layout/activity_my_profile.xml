<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:src="@drawable/confirmed"
                    app:civ_border_color="@color/endcolorgradient"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Upload Image"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="110dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="#F2100F0F" />

                <EditText
                    android:id="@+id/txt_profilename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:background="@drawable/backgroundefitview"
                    android:ems="10"
                    android:hint="Username"
                    android:focusable="false"
                    android:editable="false"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/txt_profilemob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:background="@drawable/backgroundefitview"
                    android:ems="10"
                    android:hint="Mobile No"
                    android:focusable="false"
                    android:inputType="phone"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/txt_profileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:background="@drawable/backgroundefitview"
                    android:ems="10"
                    android:hint="Email Id"
                    android:focusable="false"
                    android:inputType="textEmailAddress"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"

                    android:text="Billing Address"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/addbg"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/billingaddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="ADD BILLING ADDRESS"
                        android:drawableEnd="@drawable/droparrow"


                        android:textSize="17sp" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_billingaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/txt_billingname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/backgroundefitview"
                            android:hint="Enter Name"

                            android:textColor="@color/black" />
                        <EditText
                            android:id="@+id/txt_billingphonename"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:inputType="number"
                            android:digits="0123456789"
                            android:background="@drawable/backgroundefitview"
                            android:hint="Phone Number"

                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/txt_billingcityname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/backgroundefitview"
                            android:hint="City"

                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/txt_billinghouseno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/backgroundefitview"
                            android:hint="House No, Building Name (Required)"

                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/txt_billingarea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/backgroundefitview"
                            android:hint="Road name, Area, Colony (Required)"

                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/txt_billingpincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:maxLength="6"
                            android:singleLine="true"
                            android:inputType="number"
                            android:layout_margin="10dp"
                            android:background="@drawable/backgroundefitview"
                            android:hint="Pin Code"

                            android:textColor="@color/black" />
                        <EditText
                            android:id="@+id/txt_billingstate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/backgroundefitview"
                            android:hint="State"

                            android:textColor="@color/black" />


                        <CheckBox

                            android:id="@+id/chk_sameaddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shipping Address same as Billing Address"
                            android:layout_marginLeft="15dp"
                            />






                    </LinearLayout>






                </LinearLayout>
                <View
                    android:id="@+id/view9"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"

                    android:background="@color/brown_color"
                    android:visibility="visible" />






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/addbg"

                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/shippingaddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        android:drawableEnd="@drawable/droparrow"

                        android:text="ADD SHIPPING ADDRESS"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_shippingaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <EditText

                            android:id="@+id/txt_shippingname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/backgroundefitview"
                            android:hint="Enter Name"

                            android:textColor="@color/black" />
                        <EditText

                            android:id="@+id/txt_shippingphoneno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:inputType="number"
                            android:digits="0123456789"
                            android:background="@drawable/backgroundefitview"
                            android:hint="Phone Number"

                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/txt_shippingcity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/backgroundefitview"
                            android:hint="City"

                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/txt_shippinghouse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/backgroundefitview"
                            android:hint="House No, Building Name (Required)"

                            android:textColor="@color/black" />

                        <EditText

                            android:id="@+id/txt_shippingarea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/backgroundefitview"
                            android:hint="Road name, Area, Colony (Required)"

                            android:textColor="@color/black" />

                        <EditText

                            android:id="@+id/txt_shippingpincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:maxLength="6"
                            android:singleLine="true"
                            android:inputType="number"
                            android:layout_margin="10dp"
                            android:background="@drawable/backgroundefitview"
                            android:hint="Pin Code"

                            android:textColor="@color/black" />
                        <EditText

                            android:id="@+id/txt_shippingstate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/backgroundefitview"
                            android:hint="State"

                            android:textColor="@color/black" />









                    </LinearLayout>






                </LinearLayout>









                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signup_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25mdp"
                    android:background="@drawable/btn_color"
                    android:text="Update Details"
                    android:textAllCaps="false"
                    android:layout_marginBottom="40dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14mdp" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">




                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>