<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/linearsetting"
    android:background="@drawable/rect"
    android:layout_height="match_parent"
    tools:context=".activity.SettingActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/user_img"
                    app:civ_border_color="#E91E63"
                    app:civ_border_width="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/nav_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:text="Amirta"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/circleImageView2"
                    app:layout_constraintTop_toTopOf="@+id/circleImageView2" />

                <TextView
                    android:id="@+id/nav_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3mdp"
                    android:text="amirta@gmail.com"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="@+id/nav_name"
                    app:layout_constraintTop_toBottomOf="@+id/nav_name" />


                <View
                    android:id="@+id/usernameview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1mdp"
                    android:background="#3E000000"
                    android:layout_marginTop="@dimen/_16mdp"
                    app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
                    tools:layout_editor_absoluteX="13dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10font_mdp"
                android:orientation="vertical">

                <RelativeLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2mdp"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35font_mdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10font_mdp"
                        android:layout_marginRight="@dimen/_40mdp"
                        android:drawableLeft="@drawable/homebig"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/home"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12font_mdp"
                        app:drawableTint="@color/black" />

                    <ImageView
                        android:id="@+id/homearrow"
                        android:layout_width="@dimen/_21mdp"
                        android:layout_height="@dimen/_21mdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:paddingTop="@dimen/_5mdp"
                        android:src="@drawable/right_arrow" />

                </RelativeLayout>






                <View
                    android:id="@+id/viewadedfw1sd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1mdp"
                    android:layout_marginTop="@dimen/_1mdp"
                    android:background="#25000000"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
                    tools:layout_editor_absoluteX="13dp" />
                <View
                    android:id="@+id/viewbelowhome"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1mdp"
                    android:layout_marginTop="@dimen/_1mdp"
                    android:background="#25000000"
                    app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
                    tools:layout_editor_absoluteX="13dp" />












                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subcat"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/_16font_mdp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25font_mdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10font_mdp"
                        android:gravity="center_vertical"
                        android:text="Wheat Aata"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10font_mdp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25font_mdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10font_mdp"
                        android:gravity="center_vertical"
                        android:text="Rice Flour"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10font_mdp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25font_mdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10font_mdp"
                        android:gravity="center_vertical"
                        android:text="Maida"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10font_mdp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25font_mdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10font_mdp"
                        android:gravity="center_vertical"
                        android:text="Sooji"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10font_mdp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25font_mdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10font_mdp"
                        android:gravity="center_vertical"
                        android:text="Besan "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10font_mdp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25font_mdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10font_mdp"
                        android:gravity="center_vertical"
                        android:text="Others Flours"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10font_mdp" />




                </LinearLayout>


                <TextView
                    android:id="@+id/interiar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35font_mdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10font_mdp"
                    android:gravity="center_vertical"
                    android:text="Masalas and Spices"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13font_mdp" />

                <TextView
                    android:id="@+id/fabrication"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35font_mdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10font_mdp"
                    android:gravity="center_vertical"
                    android:text="Dry Fruits and Nuts"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13font_mdp" />

                <TextView
                    android:id="@+id/building"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35font_mdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10font_mdp"
                    android:text="Ghee and Oils"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13font_mdp" />




                <RelativeLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2mdp"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/invitefriend"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35font_mdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10font_mdp"
                        android:layout_marginRight="@dimen/_40mdp"
                        android:drawableLeft="@drawable/sharefriends"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/invitefriend"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12font_mdp"
                        app:drawableTint="@color/black" />

                    <ImageView
                        android:id="@+id/invitefreindarrow"
                        android:layout_width="@dimen/_21mdp"
                        android:layout_height="@dimen/_21mdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:paddingTop="@dimen/_5mdp"
                        android:src="@drawable/right_arrow" />

                </RelativeLayout>
                <View
                    android:id="@+id/viewbelowfriend"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1mdp"
                    android:layout_marginTop="@dimen/_1mdp"
                    android:background="#25000000"
                    app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
                    tools:layout_editor_absoluteX="13dp" />


                <RelativeLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2mdp"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rateus"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35font_mdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10font_mdp"
                        android:layout_marginRight="@dimen/_40mdp"
                        android:drawableLeft="@drawable/rateus"
                        android:drawablePadding="@dimen/_10mdp"
                        android:gravity="center_vertical"
                        android:text="@string/rateus"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12font_mdp"
                        app:drawableTint="@color/black" />

                    <ImageView
                        android:id="@+id/rateusarrow"
                        android:layout_width="@dimen/_21mdp"
                        android:layout_height="@dimen/_21mdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:paddingTop="@dimen/_5mdp"
                        android:src="@drawable/right_arrow" />

                </RelativeLayout>
                <View
                    android:id="@+id/viewbelowrateus"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1mdp"
                    android:layout_marginTop="@dimen/_1mdp"
                    android:background="#25000000"
                    app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
                    tools:layout_editor_absoluteX="13dp" />
                <RelativeLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2mdp"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/darkmode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35font_mdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10font_mdp"
                        android:layout_marginRight="@dimen/_40mdp"
                        android:drawableLeft="@drawable/ic_baseline_dark_mode_24"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="Dark Mode"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12font_mdp"
                        app:drawableTint="@color/black" />

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_1mdp"
                        android:layout_marginRight="2dp"
                        android:padding="10dp"
                        android:paddingTop="@dimen/_5mdp"
                        android:text=""
                        android:thumbTint="@color/black" />


                </RelativeLayout>
                <View
                    android:id="@+id/viewbelowdark"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1mdp"
                    android:layout_marginTop="@dimen/_1mdp"
                    android:background="#25000000"
                    app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
                    tools:layout_editor_absoluteX="13dp" />

                <RelativeLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2mdp"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35font_mdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10font_mdp"
                        android:layout_marginRight="@dimen/_40mdp"
                        android:drawableLeft="@drawable/logoutpower"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/logout"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12font_mdp"
                        app:drawableTint="@color/black" />

                    <ImageView
                        android:id="@+id/logoutarrow"
                        android:layout_width="@dimen/_21mdp"
                        android:layout_height="@dimen/_21mdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:paddingTop="@dimen/_5mdp"
                        android:src="@drawable/right_arrow" />

                </RelativeLayout>
                <View
                    android:id="@+id/viewbelowlogout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1mdp"
                    android:layout_marginTop="@dimen/_1mdp"
                    android:background="#25000000"
                    app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
                    tools:layout_editor_absoluteX="13dp" />

                <TextView
                    android:id="@+id/help"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35font_mdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10font_mdp"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:text="Help"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12font_mdp" />

                <TextView
                    android:id="@+id/privacypolicy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35font_mdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10font_mdp"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:text="Privacy Policy"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12font_mdp" />

                <TextView
                    android:id="@+id/legal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35font_mdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10font_mdp"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:text="Legal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12font_mdp" />



            </LinearLayout>


        </LinearLayout>

    </ScrollView>





















</LinearLayout>